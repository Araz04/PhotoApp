<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_image_measure"
    android:layout_height="@dimen/item_image_measure"
    android:layout_marginEnd="@dimen/default_padding_16dp"
    android:elevation="@dimen/default_padding_4dp"
    app:cardCornerRadius="@dimen/default_padding_8dp">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

</androidx.cardview.widget.CardView>